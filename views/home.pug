extends layout.pug 

block content 
    body
        .container
            .row
                .col
                    h1 Contact List
                .col
                    a.btn.btn-primary.float-end(role='button', href='/create') Create a new contact
            table.table 
                    thead   
                        tr  
                            th Name 
                            th Phone
                            th Email
                            th Address
                            th Contact By
                            th Latitude 
                            th Longitude
                            th 
                    tbody
            .row 
                .form-group
                    div#map-container
                        div#map
        
        script(src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js")
        script(src="/places.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
        script. 
            generateMap()
            loadContacts()