extends layout.pug

block content 
    .container
        .row
            .col
                h1 Delete Contact
                h2 #{contact.firstname} #{contact.lastname}
                p.text-danger Are you sure you want to delete this contact?
                form(action='/contactlist'+contact.id+'/delete', method='post')
                    button.btn.btn-danger.me-3(type='submit') Yes!
                    a.btn.btn-secondary(href='/'+contact.id) Nevermind
                    
                    
